<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover" style="width :55rem">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user%>
      <tr>
        <td>
          <%= link_to friend.first_name + " " +friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.facebook %></td>
            
        <td><%= link_to 'Edit', edit_friend_path(friend),class:"btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Delete', friend,class:"btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%end%>
<br>

